<Window x:Class="FTPClient.EditRecord"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FTPClient"
        mc:Ignorable="d"
        Title="EditRecord" Height="450" Width="800">
    <Grid>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="330,248,0,0" VerticalAlignment="Top" Width="75" Click="updateData"/>
        <Label Content="Sound Title :" HorizontalAlignment="Left" Margin="44,47,0,0" VerticalAlignment="Top"/>
        <Label Content="Sound Description :" HorizontalAlignment="Left" Margin="44,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Recorded By :" HorizontalAlignment="Left" Margin="51,205,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="soundTitle" HorizontalAlignment="Left" Height="23" Margin="199,49,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" Width="336"/>
        <TextBox x:Name="soundDesc" HorizontalAlignment="Left" Height="86" Margin="202,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="334"/>
        <TextBox x:Name="recordBy" HorizontalAlignment="Left" Height="23" Margin="202,207,0,0" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top" Width="334"/>

    </Grid>
</Window>
